<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            layout="@layout/header_layout"
            android:id="@+id/header"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_15sdp"
                            android:text="@string/purchase_desc"
                            android:textColor="@color/texts"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_25sdp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:background="@drawable/background_edit"
                            >
                            <EditText
                                android:layout_margin="@dimen/_3sdp"
                                android:background="@null"
                                android:id="@+id/edit_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight=".75"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/e_mail_for_code"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/texts"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="$ 00"
                            android:textColor="@color/colorPrimaryYellow"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="@string/purchase_note"
                            android:textColor="@color/texts"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/parent_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/secondery"
                            app:cardCornerRadius="@dimen/_5sdp">
                            <LinearLayout
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="LIFETIME"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¬4,900.00 /One-off payment"
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp" />

                                </RelativeLayout>



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/selected_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/_5sdp">
                            <LinearLayout
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ANNUAL - 254.17 per month"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="billed anually @ â‚¹3,050.00 / year"
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />

                                </RelativeLayout>



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/secondery"
                            app:cardCornerRadius="@dimen/_5sdp">
                            <LinearLayout
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="6 MONTHS - â‚¹300 per month"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¬4,900.00 /One-off payment"
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp" />

                                </RelativeLayout>



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/secondery"
                            app:cardCornerRadius="@dimen/_5sdp">
                            <LinearLayout
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="3 MONTHS - â‚¹300 per month"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¬4,900.00 /One-off payment"
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp" />

                                </RelativeLayout>



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/secondery"
                            app:cardCornerRadius="@dimen/_5sdp">
                            <LinearLayout
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="MONTHLY"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¬4,900.00 "
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp" />

                                </RelativeLayout>



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_redeem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:elevation="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:outlineProvider="background"
                        android:outlineSpotShadowColor="@color/white"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/purchase"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/colorPrimary"
                        app:cornerRadius="@dimen/_10sdp"
                        app:rippleColor="@color/black" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</layout>

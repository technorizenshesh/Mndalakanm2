<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/background"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/white">

            <LinearLayout
                style="@style/Widget.Design.BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center_vertical"

                        >
                        <TextView
                            android:id="@+id/tv_Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="@string/add_place"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />
                        <TextView
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="@string/selecttype"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_submit"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/down_arrow"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"

                    >
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/border_btn_white"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="start"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/home"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/border_gray"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="start"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/work"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/border_gray"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="start"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/school"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/background_edit"
                            >


                            <EditText
                                android:background="@null"
                                android:drawableLeft="@drawable/profile"
                                android:drawablePadding="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight=".75"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/name"
                                android:inputType="phone"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/background_edit"
                            >


                            <EditText
                                android:background="@null"
                                android:drawableLeft="@drawable/geo"
                                android:drawablePadding="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight=".75"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/address"
                                android:inputType="phone"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/radius"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:textAlignment="textEnd"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="50 M"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/range"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:textAlignment="textEnd"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint=""
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>
                        <com.google.android.material.slider.RangeSlider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"

                            android:foregroundTint="@color/colorPrimaryYellow"
                            />
                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="@string/notifications"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:textAlignment="textEnd"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsregular"
                                android:hint=""
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/on_enter"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_margin="@dimen/_15sdp"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On Exit"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_margin="@dimen/_15sdp"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:elevation="@dimen/_3sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:outlineProvider="background"
                            android:outlineSpotShadowColor="@color/white"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/save_place"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="@dimen/_10sdp"
                            app:rippleColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>

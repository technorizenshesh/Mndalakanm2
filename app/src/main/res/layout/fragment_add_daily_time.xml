<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Home.Time.Daily.AddDailyTimeFragment">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        >
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentTop="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="start"
                                android:text="@string/monday"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />

                            <ImageView
                                android:visibility="gone"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/child_icon" />
                        </RelativeLayout>


                        <LinearLayout
                            android:background="@drawable/border_btn"
                            android:layout_margin="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

<LinearLayout
    android:layout_weight=".6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/time_limit"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="           2h"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>
<LinearLayout
    android:layout_weight="1.4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/poppins_bold"
        android:outlineProvider="background"
        android:outlineSpotShadowColor="@color/white"
        android:padding="@dimen/_5sdp"
        android:text="@string/edit"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="@dimen/_10sdp"
        app:rippleColor="@color/black" />

</LinearLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center_vertical"

                                >
                                <TextView
                                    android:drawableLeft="@drawable/sown_arroww"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="@string/games_1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                  >
                                <RelativeLayout
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/ivProfile"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@drawable/fb" />
                                    <LinearLayout
                                        android:layout_toRightOf="@id/ivProfile"
                                        android:id="@+id/middle"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvUserName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Facebook"
                                            android:fontFamily="@font/poppins_bold"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvLastMessage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="       30m"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                    </LinearLayout>



                                </RelativeLayout>

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:id="@+id/edit_image"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:background="@drawable/edit_iccon" />

                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center_vertical"

                                >
                                <TextView
                                    android:drawableLeft="@drawable/sown_arroww"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="@string/utility_1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:drawableLeft="@drawable/modes"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsregular"
                                    android:hint="All Apps Locked "
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/texts"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center_vertical"

                                >
                                <TextView
                                    android:drawableLeft="@drawable/sown_arroww"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="@string/social_5"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:drawableLeft="@drawable/modes"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsregular"
                                    android:hint="All Apps Locked "
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/texts"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center_vertical"

                                >
                                <TextView
                                    android:drawableLeft="@drawable/sown_arroww"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="@string/entertainment_13"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:drawableLeft="@drawable/modes"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsregular"
                                    android:hint="All Apps Locked "
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/texts"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



            </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>

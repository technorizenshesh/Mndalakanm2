<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Home.Apps.AppsFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/restrictions_for_child_mode"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />



                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/child_icon"/>
                    <ImageView
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/add_btn"/>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/cccc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/one_dig"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_3sdp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                             android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:text="@string/child_apps"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/system_apps"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/two_dig"
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >

                        <TextView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:text="@string/blocked_apps"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/web_filtering"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/three_dig"
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >

                        <TextView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:text="@string/web_filtering"

                            />

                    </LinearLayout>


            </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</layout>

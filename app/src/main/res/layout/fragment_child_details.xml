<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setupKid.ChildDetailsFragment"
        android:orientation="vertical">
        <include
            layout="@layout/header_layout"
            android:id="@+id/header" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:paddingBottom="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Supervise this device"
                            android:gravity="start"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_16sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/background_edit"
                            >


                            <EditText
                                 android:id="@+id/edit_name"
                                android:background="@null"
                                android:drawableLeft="@drawable/profile"
                                android:drawablePadding="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight=".75"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="Child's name"
                                android:inputType="textPersonName"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/background_edit"
                            >


                            <EditText
                                 android:id="@+id/age_pick"
                                android:drawableLeft="@drawable/age_aa"
                                android:drawablePadding="@dimen/_15sdp"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight=".75"
                                android:fontFamily="@font/poppinsregular"
                                android:hint="Age"
                                 android:clickable="false"
                                android:focusable="false"
                                android:inputType="none"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/texts"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>



                        <TextView

                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Why do you need to know child's age?"
                            android:gravity="start"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp" />
                        <EditText
                            android:visibility="gone"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight=".75"
                            android:fontFamily="@font/poppinsregular"
                            android:hint="2836094"
                            android:inputType="phone"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <TextView
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="PICK AN AVATAR"
                        android:gravity="start"
                        android:textColor="@color/colorPrimaryYellow"
                        android:textSize="@dimen/_10sdp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    >
    <ImageView
        android:id="@+id/add_image"
        android:padding="@dimen/_2sdp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/add_btn"
        android:backgroundTint="@color/colorPrimary" />
    <LinearLayout
        android:visibility="gone"
        android:weightSum="4"
        android:padding="@dimen/_2sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"

            >
            <ImageView
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/avtr1"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/right" />
        </RelativeLayout>


        <ImageView
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/avtr1"
           android:backgroundTint="@color/colorPrimary" />
        <ImageView
        android:layout_weight="1"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/avtr_2"
        /> <ImageView
        android:layout_weight="1"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/avtr_3"
        />


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:weightSum="4"
        android:padding="@dimen/_2sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/avte_5"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/avtr_4"
            /> <ImageView
        android:layout_weight="1"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/avtr_4"
        /> <ImageView
        android:layout_weight="1"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/avtr_6"
        />


    </LinearLayout>


</LinearLayout>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:outlineProvider="background"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:text="Save"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/black" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>

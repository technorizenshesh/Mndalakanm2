<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/background"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/transparent">

            <LinearLayout
                style="@style/Widget.Design.BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="@dimen/_6sdp"
                    android:text=" Select Language "
                    android:textAlignment="center"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/_12sdp" />
                <RelativeLayout
                    android:id="@+id/english_rela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/comp_1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:id="@+id/comp_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/comp_1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_6sdp"
                        android:text="  English "

                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/eng"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:buttonTint="@color/colorPrimary"
                        android:padding="@dimen/_10sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/arabic_rela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivPersonal12"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:id="@+id/tvPersonal12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ivPersonal12"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_6sdp"
                        android:text="  Arabic "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/arb"
                        android:clickable="false"
                        android:focusable="false"
                        android:buttonTint="@color/colorPrimary"
                        android:padding="@dimen/_10sdp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/kurdic_rela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivPersonal1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:src="@drawable/back_arrow" />

                    <TextView
                        android:id="@+id/tvPersonal1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ivPersonal1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_6sdp"
                        android:text="  Kurdish "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/kur"
                        android:clickable="false"
                        android:focusable="false"
                        android:buttonTint="@color/colorPrimary"
                        android:padding="@dimen/_10sdp" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
